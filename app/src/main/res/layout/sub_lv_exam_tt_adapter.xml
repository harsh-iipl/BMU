<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_margin="2dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/mainlectlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/mainlectlayout_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rllectureheader_"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/sy1"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llimagelecture"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/darksy1"
                    android:gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/imglecture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/lecturer" />

                </LinearLayout>


               <com.infinity.infoway.bmu.CommonCls.CustomTextView
                    android:id="@+id/sub_name_exam_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/llimagelecture"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/lltime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:visibility="visible">

                   <com.infinity.infoway.bmu.CommonCls.CustomTextView
                        android:id="@+id/tvstarttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textSize="12dp"
                        android:text="Result Date:"
                        android:visibility="gone"
                        android:textColor="@color/white" />

                   <com.infinity.infoway.bmu.CommonCls.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginLeft="5dp"
                        android:gravity="end"
                        android:text="To"
                        android:visibility="gone"
                        android:textColor="@color/white" />

                   <com.infinity.infoway.bmu.CommonCls.CustomTextView
                        android:id="@+id/tv_date_exam_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="4dp"
                        android:gravity="right"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:text="01/01/2018"
                        android:textColor="@color/white" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/attendance"
                android:layout_weight="4">
               <com.infinity.infoway.bmu.CommonCls.CustomTextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="Total Marks :"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight=".6"/>
               <com.infinity.infoway.bmu.CommonCls.CustomTextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:id="@+id/exam_tt_total_marks_detail"
                    android:gravity="center|left"
                    android:layout_gravity="center"
                    android:layout_weight="1.4"/>


               <com.infinity.infoway.bmu.CommonCls.CustomTextView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Passing Marks:"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold" />

               <com.infinity.infoway.bmu.CommonCls.CustomTextView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/passing_marks_examtt_detail"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:gravity="center|left"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:background="@color/attendance"
                android:orientation="horizontal"
                >
               <com.infinity.infoway.bmu.CommonCls.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_weight=".4"
                    android:textColor="@color/white"
                    android:text="Start Time :"/>
               <com.infinity.infoway.bmu.CommonCls.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_weight="1.6"
                    android:gravity="left"
                    android:id="@+id/st_time_exam_detail"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    />

               <com.infinity.infoway.bmu.CommonCls.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:layout_weight=".4"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="End Time :"/>
               <com.infinity.infoway.bmu.CommonCls.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:id="@+id/end_time_exam_detail"
                    android:gravity="left"
                    android:layout_weight="1.6"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                   <com.infinity.infoway.bmu.CommonCls.CustomTextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@color/darksy1"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="right"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="View"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/homework_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
