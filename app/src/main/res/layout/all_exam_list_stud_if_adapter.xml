<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/white"

        card_view:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:padding="2dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/cal_" />

                    <com.infinity.infoway.bmef.CommonCls.CustomTextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/calendar"
                        android:textSize="@dimen/Font_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_weight=".4"
                    android:gravity="right|center">

                    <ImageView
                        android:id="@+id/iv_file"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/doc" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="2dp">

                <com.infinity.infoway.bmef.CommonCls.CustomTextView

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:fontFamily="@font/poppins"
                    android:text="Degree Name :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Font_size" />

                <com.infinity.infoway.bmef.CommonCls.CustomTextView
                    android:id="@+id/tv_an"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/footer_"
                    android:textSize="@dimen/Font_size" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
android:weightSum="2"
                android:padding="2dp">

                <com.infinity.infoway.bmef.CommonCls.CustomTextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Semester Name :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Font_size" />

                <com.infinity.infoway.bmef.CommonCls.CustomTextView
                    android:id="@+id/tv_course"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/footer_"
                    android:textSize="@dimen/Font_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="2dp">

                <com.infinity.infoway.bmef.CommonCls.CustomTextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Exam Name :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Font_size" />

                <com.infinity.infoway.bmef.CommonCls.CustomTextView
                    android:id="@+id/tv_sem"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/footer_"
                    android:textSize="@dimen/Font_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:padding="2dp">

                <com.infinity.infoway.bmef.CommonCls.CustomTextView
                    android:layout_weight="1"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Student Exam Type :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Font_size" />

                <com.infinity.infoway.bmef.CommonCls.CustomTextView
                    android:id="@+id/tv_div"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/footer_"
                    android:textSize="@dimen/Font_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
            android:weightSum="2"
                android:padding="2dp">

                <com.infinity.infoway.bmef.CommonCls.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Subject :"
                    android:visibility="invisible"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Font_size" />

                <com.infinity.infoway.bmef.CommonCls.CustomTextView
                    android:id="@+id/tv_view"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=" View "
android:gravity="end"
                    android:layout_margin="3dp"
                    android:textAlignment="center"
                    android:background="@color/btn_color"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_u" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>