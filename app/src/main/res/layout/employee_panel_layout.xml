<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_below="@+id/mainimagelayout"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <LinearLayout

        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/imgprofile_emp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/new_profile" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:lines="2"
                android:gravity="center"

                android:textSize="15dp"
                android:textColor="@color/black"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_rem_att"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/new_remaining_att" />

            <TextView

                android:id="@+id/textfee"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pending Attendance"

                android:textSize="15dp"
                android:textColor="@color/black"
                android:lines="2"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <!--<ImageView-->
                <!--android:id="@+id/iv_att"-->
                <!--android:layout_width="90dp"-->
                <!--android:layout_height="90dp"-->
                <!--android:src="@drawable/new_attendance" />    -->

            <ImageView
                android:id="@+id/imgattendance_emp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/new_attendance" />

            <TextView
                android:id="@+id/textattendence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/att"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:gravity="center"
                android:lines="2"
                android:visibility="visible" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgtimetable_emp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/new_timetable" />


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Table"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:lines="2"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgnews_emp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/new_announcement"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txt_erning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Announcement"

                    android:lines="2"
                    android:textColor="@color/black"
                    android:visibility="visible" />

            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <!--<ImageView-->
                    <!--android:id="@+id/iv_assignment"-->
                    <!--android:layout_width="90dp"-->
                    <!--android:layout_height="90dp"-->
                    <!--android:src="@drawable/new_lessionplan" />-->
                <ImageView
                    android:id="@+id/imglessionplan"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/new_lessionplan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Lesson Plan"
                    android:textColor="@color/black"
                    android:textSize="15dp"

                    android:lines="2"
                    android:visibility="visible" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/new_icon_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_leave_app_emp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/new_leave" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leave"
                android:lines="2"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:visibility="visible" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">




            <ImageView
                android:id="@+id/img_Moreapp_emp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/new_online_jau"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_placement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Other Apps"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:lines="2"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/img_leave_app"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/img_leave_app"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class &#10; Work"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_view_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"

        android:visibility="gone">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/down_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="10dp"
            android:text="View More..."
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_views_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/fees_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="3">


         <!--   <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_receipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="News"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgattendance"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/syllabus"
                    android:visibility="visible" />

            </LinearLayout>-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="FeedBack"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_result"
                    android:layout_width="90dp"

                    android:layout_height="90dp"
                    android:src="@drawable/result_icon"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/assignment_img"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/assignment"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class &#10; Work"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:id="@+id/five_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/pending_fees_img"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/pendingfeesicon"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class &#10; Work"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_mid_exam_tt"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/exam_tt"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MidExamTimeTable"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_feecircular"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/feecircular"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class &#10; Work"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>