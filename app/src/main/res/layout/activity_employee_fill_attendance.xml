<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:background="@color/light_yello"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout

        android:id="@+id/ll_fill_att"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/footer_agree"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="@color/green">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical">

                <com.infinity.infoway.agriculture.CommonCls.CustomTextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Fill Attendance"
                    android:textColor="@color/black"
                    android:textSize="17sp" />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:id="@+id/ll_fill_att"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/border_cat_main_orange"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:orientation="horizontal">

                        <com.infinity.infoway.agriculture.CommonCls.CustomTextView
                            android:id="@+id/tv_course_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:text="1 - B.F.Sc"
                            android:textColor="@color/white" />

                        <com.infinity.infoway.agriculture.CommonCls.CustomTextView
                            android:id="@+id/tv_lect_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:text="Lecture -2"
                            android:textColor="@color/white" />

                        <com.infinity.infoway.agriculture.CommonCls.CustomTextView
                            android:id="@+id/tv_class_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:text="Class -2"
                            android:textColor="@color/white" />

                        <com.infinity.infoway.agriculture.CommonCls.CustomTextView
                            android:id="@+id/tv_dept_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:text="1 - Aquaculture"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:orientation="horizontal">

                        <com.infinity.infoway.agriculture.CommonCls.CustomTextView
                            android:id="@+id/tv_sub_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:text="AQC 101 - Principles of Aquaculture"
                            android:textColor="@color/white" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_method1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/method1"
                        android:orientation="horizontal"
                        android:padding="7dp"
                        android:visibility="visible">

                        <com.infinity.infoway.agriculture.CommonCls.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:text="Method 1 : (by Students)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_margin" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right|center"
                            android:padding="3dp">

                            <ImageView
                                android:id="@+id/iv_down_arrow"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="right|center"
                                android:src="@drawable/ar_down" />
                        </LinearLayout>


                    </LinearLayout>

                    <com.infinity.infoway.agriculture.CommonCls.CustomBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_column"
                        android:padding="7dp"
                        android:text="Columns.."
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_u" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/header_stud"
android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <com.infinity.infoway.agriculture.CommonCls.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Roll No"
                            android:textColor="@color/white"
                            android:textSize="@dimen/Font_size" />

                        <com.infinity.infoway.agriculture.CommonCls.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Name of Student"

                            android:textColor="@color/white"
                            android:textSize="@dimen/Font_size" />

                        <com.infinity.infoway.agriculture.CommonCls.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Enrollment"

                            android:textColor="@color/white"
                            android:textSize="@dimen/Font_size" />

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".7"
android:theme="@style/CustomAppTheme"
                            android:id="@+id/cb_check_fill_attendance"
                            android:textOff=" A"
                            android:showText="true"
                            android:textOn=" P"
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.infinity.infoway.agriculture.activity.ExpandableHeightListView
                            android:id="@+id/lv_expan_stud"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"></com.infinity.infoway.agriculture.activity.ExpandableHeightListView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_method2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@color/method2"
                        android:orientation="horizontal"
                        android:padding="7dp"
                        android:visibility="visible">

                        <com.infinity.infoway.agriculture.CommonCls.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:text="Method 2 : (by Roll Numbers)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_margin" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right|center"
                            android:padding="3dp">

                            <ImageView
                                android:id="@+id/iv_down_arrow_method2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="right|center"
                                android:src="@drawable/ar_down" />
                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_method_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:gravity="center|left"
                            android:orientation="horizontal">

                            <com.infinity.infoway.agriculture.CommonCls.CustomBoldTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Attendance For : "
                                android:textColor="@color/black" />

                            <Switch
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <com.infinity.infoway.agriculture.CommonCls.CustomEditText
                            android:id="@+id/edt_roll_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/edt_style_form"
                            android:hint="Enter Comma Separeted Roll Numbers "
                            android:lines="4"
                            android:maxLines="4"
                            android:padding="5dp"
                            android:textSize="@dimen/Font_size" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>



    </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:id="@+id/rel_bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_style_form"
            android:gravity="center"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spin_topic"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:padding="5dp"></Spinner>

            <com.infinity.infoway.agriculture.CommonCls.CustomBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spin_topic" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>