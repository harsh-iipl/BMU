<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:padding="10dp">
    <LinearLayout
        android:id="@+id/mainlectlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/pop_up_corner"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_height="wrap_content">
               <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                    android:layout_width="wrap_content"
                    android:id="@+id/header_sub"
                    android:gravity="center"
                    android:textSize="18dp"
                    style="@style/Hyperlink"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:id="@+id/cross_img"
                    android:src="@drawable/ic_cross_img"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/pop_img"
                    android:layout_margin="5dp"
                    android:src="@drawable/no_image"
                    android:layout_gravity="center"/>
            </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="3dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lldivision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:weightSum="1">

               <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                    android:id="@+id/tvhdivision"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.75"
                    />

               <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textColor="#fff"
                    android:textStyle="bold"/>

               <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="---"
                    android:textColor="#fff"
                    android:id="@+id/pop_date"
                    android:paddingLeft="10dp"
                    android:layout_weight="0.25"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llsubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="1">
           <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subject"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.75" />

           <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textColor="#fff"
                android:textStyle="bold"/>

           <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="---"
                android:textColor="#fff"
                android:id="@+id/pop_subject"
                android:paddingLeft="10dp"
                android:layout_weight="0.25"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llclassroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="1">

           <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Content"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.75" />

           <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textColor="#fff"
                android:textStyle="bold"/>

           <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="---"
                android:textColor="#ffff"
                android:id="@+id/pop_content"
                android:paddingLeft="10dp"
                android:layout_weight="0.25"/>

        </LinearLayout>

