<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/news_layout"

        android:background="@drawable/border_line"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:weightSum="2">

       <com.infinity.infoway.bmu.CommonCls.CustomTextView
            android:id="@+id/news_text_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="0.6"
            android:gravity="bottom"
            android:text="headernewsdisplay"
            android:textColor="#BD3839"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:orientation="horizontal"
            android:weightSum="2">

           <com.infinity.infoway.bmu.CommonCls.CustomTextView
                android:id="@+id/news_header_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1.6"
                android:gravity="center|left"
                android:paddingTop="3dp"
                android:text="announcement news"
                android:textColor="#BD3839"
                android:textSize="14dp" />

           <com.infinity.infoway.bmu.CommonCls.CustomButton
                android:id="@+id/news_view_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="0.4"
                android:background="@drawable/button_corner"
                android:text="View"
                android:textAllCaps="false"
                android:textColor="#BD3839"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>