                    <!--android:text="40"-->
                    <!--android:textSize="16dp"-->
                    <!--android:paddingRight="70dp"-->
                    <!--android:gravity="center"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:id="@+id/total_marks_result"-->
                    <!--android:layout_weight="1"/>-->
