<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/border_cat_main"
    android:orientation="vertical"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_no_records"
        android:visibility="gone"
        android:orientation="vertical">

        <com.infinity.infoway.gsfc.CommonCls.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Records Found"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/Font_size" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_main"
        android:background="@drawable/border_cat_main"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/cal_" />

                <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/calendar"
                    android:textSize="@dimen/Font_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right|center"
                android:layout_gravity="center|right"
                android:layout_weight=".4">
                <ImageView
                    android:layout_width="30dp"
                    android:src="@drawable/doc"
                    android:id="@+id/iv_file"
                    android:layout_height="30dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_announce_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Announced By  :"
                android:textColor="@color/black"
                android:textSize="@dimen/Font_size" />

            <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                android:id="@+id/tv_announce_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="@color/footer_"
                android:textSize="@dimen/Font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Description  :"
                android:textColor="@color/black"
                android:textSize="@dimen/Font_size" />

            <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                android:id="@+id/tv_desc_ann"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="@color/footer_"
                android:textSize="@dimen/Font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_view_ann"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight=".5"
                android:gravity="left"
                android:orientation="vertical">

                <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                    android:id="@+id/tv_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:background="@drawable/bg_child_collage_dispaly"
                    android:fontFamily="@font/poppins"
                    android:padding="5dp"

                    android:text="   View   "
                    android:textColor="@color/white"
                    android:textSize="@dimen/Font_size" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_final_ann"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1.5"
                android:gravity="right"
                android:orientation="horizontal">

                <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="-Announced By :"
                    android:textColor="@color/method2"
                    android:textSize="@dimen/Font_size" />

                <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                    android:id="@+id/tv_ann_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/method2"
                    android:textSize="@dimen/Font_size" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>