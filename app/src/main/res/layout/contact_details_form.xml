<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:focusable="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/personaldetail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/personalimage"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/contact_us" />
            </LinearLayout>

            <com.infinity.infoway.bmef.CommonCls.CustomTextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/imageView4"
                android:text="Contact Details"
                android:textColor="@color/white"
                android:textSize="17sp" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"

            android:orientation="vertical"
            android:paddingLeft="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">


                <com.infinity.infoway.bmef.CommonCls.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:text="Mobile No" android:lines="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_u_small" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1.5"
                    android:orientation="vertical">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:backgroundTint="@color/btn_color"
                        android:focusable="false"
                        android:textColorHint="@color/silver">
                        <!--
            <com.infinity.infoway.bmef.CommonCls.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textStyle="bold" />-->


                        <com.infinity.infoway.bmef.CommonCls.CustomEditText
                            android:id="@+id/txtmobilenouser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:textSize="@dimen/text_size_u_small"
                            android:maxLines="1"
                            android:paddingLeft="10dp" />

                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/green" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:orientation="horizontal"
                android:weightSum="2">


                <com.infinity.infoway.bmef.CommonCls.CustomTextView
                    android:id="@+id/txtfthermobilenoheader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:lines="2"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:text="Father's Mobile No."
                    android:textColor="@color/black" />

                <!--  <com.infinity.infoway.bmef.CommonCls.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textStyle="bold" />
-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:backgroundTint="@color/btn_color"
                        android:textColorHint="@color/silver">

                        <com.infinity.infoway.bmef.CommonCls.CustomEditText
                            android:id="@+id/txtfathermobileno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"

                            android:textSize="@dimen/text_size_u_small"
                            android:inputType="number"
                            android:maxLines="1"
                            android:paddingLeft="10dp" />

                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/green" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">


                <com.infinity.infoway.bmef.CommonCls.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@null"
                    android:text="Present Address"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_u_small" />

                <!-- <com.infinity.infoway.bmef.CommonCls.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textStyle="bold" />-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:backgroundTint="@color/btn_color"
                        android:textColorHint="@color/silver">

                        <com.infinity.infoway.bmef.CommonCls.CustomEditText
                            android:id="@+id/txtpresentaddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_u_small"
                            android:background="@null"
                         android:lines="2"
                            android:maxLines="3"

                            android:paddingLeft="10dp" />

                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/green" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:orientation="horizontal"
                android:weightSum="2">


                <com.infinity.infoway.bmef.CommonCls.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@null"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_u_small" />
                <!--
            <com.infinity.infoway.bmef.CommonCls.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textStyle="bold" />-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:backgroundTint="@color/btn_color"
                        android:textColorHint="@color/silver">

                        <com.infinity.infoway.bmef.CommonCls.CustomEditText
                            android:id="@+id/txtemail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:textSize="@dimen/text_size_u_small"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:paddingLeft="10dp" />
                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/green" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">


                <com.infinity.infoway.bmef.CommonCls.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="State"
                    android:textColor="@color/black" />

                <!-- <com.infinity.infoway.bmef.CommonCls.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textStyle="bold" />-->


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/spin_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:minHeight="30dp"
                        android:padding="5dp"></com.toptoche.searchablespinnerlibrary.SearchableSpinner>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/green" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">


                <com.infinity.infoway.bmef.CommonCls.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="District"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_u_small" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <!-- <com.infinity.infoway.bmef.CommonCls.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textStyle="bold" />-->


                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/spin_district"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:minHeight="30dp"
                        android:padding="5dp"></com.toptoche.searchablespinnerlibrary.SearchableSpinner>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/green" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">


                <com.infinity.infoway.bmef.CommonCls.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="City"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_u_small" />

                <!-- <com.infinity.infoway.bmef.CommonCls.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textStyle="bold" />-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/spin_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:minHeight="30dp"
                        android:padding="5dp"></com.toptoche.searchablespinnerlibrary.SearchableSpinner>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/green" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

android:visibility="gone"
                android:orientation="horizontal"
                android:weightSum="2">


                <com.infinity.infoway.bmef.CommonCls.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@null"
                    android:text="Landmark"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_u_small" />

                <!-- <com.infinity.infoway.bmef.CommonCls.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textStyle="bold" />-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:backgroundTint="@color/btn_color"
                        android:textColorHint="@color/silver">

                        <com.infinity.infoway.bmef.CommonCls.CustomEditText
                            android:id="@+id/txtlandmark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:focusable="false"
                            android:maxLines="1"
                            android:paddingLeft="10dp" />

                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/green" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:orientation="horizontal"
                android:weightSum="2">


                <com.infinity.infoway.bmef.CommonCls.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@null"
                    android:text="Pincode"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_u_small" />

                <!-- <com.infinity.infoway.bmef.CommonCls.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textStyle="bold" />-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:backgroundTint="@color/btn_color"
                        android:textColorHint="@color/silver">

                        <com.infinity.infoway.bmef.CommonCls.CustomEditText
                            android:id="@+id/txtpincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:textSize="@dimen/text_size_u_small"

                            android:inputType="number"
                            android:maxLines="1"
                            android:paddingLeft="10dp" />

                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/green" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="2">


                <com.infinity.infoway.bmef.CommonCls.CustomTextView
                    android:layout_width="0dp"
                    android:textSize="@dimen/text_size_u_small"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Country"
                    android:textColor="@color/black" />
                <!--
            <com.infinity.infoway.bmef.CommonCls.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textStyle="bold" />-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"


                    android:layout_weight="1.5"
                    android:orientation="vertical">


                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/spin_countrycontact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:minHeight="30dp"
                        android:padding="5dp"></com.toptoche.searchablespinnerlibrary.SearchableSpinner>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/green" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="horizontal"
                android:weightSum="2">


                <!--
            <com.infinity.infoway.bmef.CommonCls.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textStyle="bold" />-->


            </LinearLayout>


            <com.infinity.infoway.bmef.CommonCls.CustomButton
                android:id="@+id/btnnext"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"

                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"

                android:background="@color/btn_color"
                android:text="Next"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>
</ScrollView>


